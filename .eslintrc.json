{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "globals": {
    "SpreadsheetApp": "readonly",
    "ScriptApp": "readonly",
    "PropertiesService": "readonly",
    "UrlFetchApp": "readonly",
    "Utilities": "readonly",
    "HtmlService": "readonly",
    "DriveApp": "readonly",
    "Logger": "readonly",
    "console": "readonly",
    "Config": "readonly",
    "ApiClient": "readonly",
    "Utils": "readonly",
    "SpreadsheetManager": "readonly",
    "VisitorService": "readonly",
    "ReservationService": "readonly",
    "PaymentService": "readonly"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "indent": ["error", 2],
    "no-trailing-spaces": "error",
    "eol-last": ["error", "always"]
  }
}